{% extends 'admin.main.twig' %}
{% block content %}
    <!-- start: page -->
    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <h2 class="card-title">Alterar Senha</h2>
                </header>
                <div class="card-body">
                    <form class="form-horizontal form-bordered" method="post" enctype="multipart/form-data">
                        <input type="hidden" value="{{ csrf_token() }}" name="_token">
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">Senha Atual</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" name="old_password" required="required">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">Nova Senha</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" name="password" required="required">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">Confirmar Nova Senha</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" name="password_confirmation" required="required">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="offset-lg-3 col-lg-6">
                                <input type="submit" class="btn btn-primary" value="Alterar Senha">
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
