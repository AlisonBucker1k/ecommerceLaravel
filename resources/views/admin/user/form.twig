{% extends 'admin.main.twig' %}

{% block content %}
    <div class="row">
        <div class="col">
            <section class="card">
                <form class="form-horizontal form-bordered" method="post" enctype="multipart/form-data">
                    <header class="card-header">
                        <h2 class="card-title">{{ title }}</h2>
                    </header>
                    <div class="card-body">
                        <input type="hidden" name="_token" value="{{ csrf_token() }}">
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">Nome</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" name="name" value="{{ old('name', user.name) }}" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">E-mail</label>
                            <div class="col-lg-6">
                                <input type="email" class="form-control" name="email" value="{{ old('email', user.email) }}" autocomplete="off" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">Senha</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" name="password" value="{{ old('password') }}" autocomplete="off" {% if user is null %}required{% endif %} {% if user is not null %}placeholder="Informe somente se desejar alterar"{% endif %}>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">Confirme a Senha</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" name="password_confirmation" value="{{ old('password_confirmation') }}" autocomplete="off" {% if user is null %}required{% endif %}>
                            </div>
                        </div>
                    </div>
                    <footer class="card-footer text-center">
                        <input type="submit" class="btn btn-sm btn-primary" value="Salvar">
                    </footer>
                </form>
            </section>
        </div>
    </div>
{% endblock %}