<!doctype html>
<html class="fixed">
<head>
    <!-- Basic -->
    <meta charset="UTF-8">
    <title>√Årea Restrita</title>
    <link rel="shortcut icon" href="/assets/img/favicon.png">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light"
          rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/general/components/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/general/components/animate.css/animate.min.css">

    <link rel="stylesheet" href="/general/components/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/general/components/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="/assets/css/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="/assets/css/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="/assets/css/custom.css">

    <link rel="stylesheet" href="/general/components/toastr/toastr.min.css">

    <!-- Head Libs -->
    <script src="/assets/lib/modernizr/modernizr.js"></script>

</head>
<body>
<!-- start: page -->
<section class="body-sign">
    <div class="center-sign">
        <div class="text-center mb-4">
            <a href="/" class="logo">
                <img src="/assets/img/logo.png" height="44"/>
            </a>
        </div>

        <div class="panel card-sign">
            <div class="card-body">
                <form action="{{ route('password.reset') }}" method="post">
                    {{ csrf_field() }}
                    <input type="hidden" name="token" value="{{ token }}">
                    <input type="hidden" name="email" value="{{ email }}">
                    <div class="form-group mb-3">
                        <div class="form-group">
                            <label for="password">Senha</label>
                            <input type="password" class="form-control margin-bottom-20" name="password">
                        </div>
                        <div class="form-group">
                            <label for="confirm_password">Confirme a Senha</label>
                            <input type="password" class="form-control margin-bottom-20" name="password_confirmation">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-primary mt-2">Resetar senha</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>

        <p class="text-center text-muted mt-3 mb-3">&copy; <a href="https://bckcode.com.br" target="_blank">BCKCode</a>. Todos os direitos reservados.</p>
    </div>
</section>
<!-- end: page -->

<script src="/general/components/jquery/dist/jquery.min.js"></script>
<script src="/assets/lib/jquery-browser-mobile/jquery.browser.mobile.js"></script>
<script src="/general/components/toastr/toastr.min.js"></script>
<script>
    $(function(){
        toastr.options = {
            closeButton: true,
            progressBar: true,
            showMethod: 'slideDown',
        };

        {% for error in errors.all() %}
        toastr.error('{{ error | raw }}');
        {% endfor %}

        {% if session_has('success') %}
        toastr.success('{{ session_get('success') | raw }}');
        {% endif %}
    });
</script>

</body>
</html>
