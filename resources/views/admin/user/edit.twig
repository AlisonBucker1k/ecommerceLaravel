{% extends 'admin.main.twig' %}
{% block content %}
    <!-- start: page -->
    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <h2 class="card-title">Alterar Dados</h2>
                </header>
                <div class="card-body">
                    <form class="form-horizontal form-bordered" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="_token" value="{{ csrf_token() }}">
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">Nome</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" name="name" value="{{ old('name', auth_user().name) }}" required="required">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2">E-mail</label>
                            <div class="col-lg-6">
                                <input type="email" class="form-control" name="email" value="{{ old('email', auth_user().email) }}" required="required">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="offset-lg-3 col-lg-6">
                                <input type="submit" class="btn btn-primary" value="Salvar">
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
