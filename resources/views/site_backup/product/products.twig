{% extends 'site.main.twig' %}{% block content %}	<section class="page-header page-header-classic">		<div class="container">			<div class="row">				<div class="col p-static">					<h1 data-title-border>{{ category.name | default('Produtos') }}</h1>				</div>			</div>		</div>	</section>	<div class="container">		<div class="row">			<div class="col-lg-3">				<form method="get">					<aside class="sidebar">						<div class="input-group mb-3 pb-1">							<input class="form-control text-1" placeholder="Buscar Produto" name="product_name" id="product_name" type="text" value="{{ input_get('product_name') }}">							<span class="input-group-append">								<button type="submit" class="btn btn-dark text-1 p-2"><i class="fas fa-search m-2"></i></button>							</span>						</div>						<h5 class="font-weight-bold pt-3">Categorias</h5>						<ul class="nav nav-list flex-column accordion">							{% for category in categoriesWithProduct %}								{% set subcategories = category.subcategories %}								<li class="nav-item">									<a										class="nav-link {{ filters.category.slug == category.slug ? 'font-weight-bold' : '' }}"										{% if subcategories|length > 0 %}											data-toggle="collapse"											href="#collapse{{ category.id }}"											aria-expanded="true"											aria-controls="collapse{{ category.id }}"										{% else %}											href="{{ route('products', category.slug) }}"										{% endif %}									>										{{ category.name }}									</a>									{% if subcategories|length > 0 %}										<ul id="collapse{{ category.id }}" class="ml-2 collapse {% if filters.category.slug == category.slug %}show{% endif %}">											{% for subcategory in subcategories %}												<li>													<a href="{{ route('products', [category.slug, subcategory.slug]) }}" class="{{ filters.subcategory.slug == subcategory.slug ? 'font-weight-bold' : '' }}">														{{ subcategory.name }}													</a>												</li>											{% endfor %}											<li>												<a href="{{ route('products', category.slug) }}" class="{{ filters.subcategory.slug is null and filters.category.slug == category.slug ? 'font-weight-bold' : '' }}">													Todos												</a>											</li>										</ul>									{% endif %}								</li>							{% endfor %}						</ul>						<div class="card mt-4">							<article class="card-group-item">								<header class="card-header">									<h5 class="font-weight-bold mb-0">Filtrar por pre√ßo</h5>								</header>								<div class="filter-content">									<div class="card-body">										<div class="form-row">											<div class="form-group col-md-6">												<label>Min</label>												<input name="start_value" type="text" class="form-control money" placeholder="0,00" value="{{ input_get('start_value') }}">											</div>											<div class="form-group col-md-6 text-right">												<label>Max</label>												<input name="end_value" type="text" class="form-control money" placeholder="1.000,00" value="{{ input_get('end_value') }}">											</div>										</div>										<button type="submit" class="btn btn-success">Filtrar</button>									</div>								</div>							</article>						</div>					</aside>				</form>			</div>			<div class="col-lg-9">				<div class="masonry-loader masonry-loader-showing shop">					<div class="row products product-thumb-info-list" data-plugin-masonry data-plugin-options="{'layoutMode': 'fitRows'}">						{% for product in products %}							{% set variation = product.availableVariation() %}							<div class="col-sm-6 col-lg-4 product mt-4">								<a href="{{ route('product.show', [product.slug]) }}">									{% if variation.discount_percent > 0 %}										<span class="onsale">{{ variation.discount_percent }}%</span>									{% endif %}								</a>								<span class="product-thumb-info border-0">									<a href="{{ route('product.show', [product.slug]) }}">										<span class="product-thumb-info-image">											<img alt="" class="img-fluid" src="{{ variation.image }}">										</span>									</a>									<span class="product-thumb-info-content product-thumb-info-content pl-0 bg-color-light">										<a href="{{ route('product.show', [product.slug]) }}">											<h4 class="text-4 text-primary">{{ product.name }}</h4>											<span class="price">												{% if variation.discount_percent > 0 %}													<del>														<span class="amount">															R$ {{ variation.value_formated }}														</span>													</del>												{% endif %}												<ins>													<span class="amount text-dark font-weight-semibold">														R$ {{ variation.final_price_formated }}													</span>												</ins>											</span>										</a>									</span>								</span>							</div>						{% else %}							<div class="col text-center">								Nenhum produto encontrado							</div>						{% endfor %}					</div>					<div class="row">						<div class="col">							{{ products.appends(app.request.except('page')).links | raw }}						</div>					</div>				</div>			</div>		</div>	</div>{% endblock content %}{% block footer %}	<script type="text/javascript" src="/general/components/jquery-mask-plugin/dist/jquery.mask.js"></script>	<script type="text/javascript">		$('.money').mask('#.##0,00', {reverse: true});	</script>{% endblock footer %}